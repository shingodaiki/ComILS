; Top-most EditorConfig file
root = true

[*]
indent_style = tab
indent_size = 4

# The indentation (and source formatting!) of the addin sources are different than the rest of the solution.
[ILSpy.AddIn/*]
indent_style = space
indent_size = 4

[*.il]
indent_style = space
indent_size = 2

[*.csproj]
indent_style = space
indent_size = 2
[*.config]
indent_style = space
indent_size = 2
[*.vsixmanifest]
indent_style = space
indent_size = 2
